doctype html
head
  title=title
  link(rel='stylesheet' href='/stylesheets/style.css')
h1 Login
form.loginForm(method='post' action='/login')
  p
    label(for='username') Username:
    input#username.loginForm__input(type='text' name='username')
  p
    label(for='password') Password:
    input#password.loginForm__input(type='text' name='password')
  p
    button(type='submit') Login
  include ../layouts/foot.pug
